<%- include("partials/header.ejs") %>

<div class="container row">
        <% if (userPosts.length===0) { %>
            <div class="container">
                <p>There is no post yet!</p>
                <a href="/create"><button class="btn btn-primary">Create Post</button></a>
            </div>
            <% }else { %>
                <% userPosts.forEach(item=> { %>
                    <div class="col-md-4">
                        <div
                            class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                            <div class="col p-4 d-flex flex-column position-static">
                                <h2 class="mb-2"><%= item.tittle %></h2>
                                <div class="mb-2 text-body-secondary"><%= item.dateOfCreation %></div>
                                <p class="card-text mb-auto">"<%= item.content.substring(0, 100) %>"...</p> <a href="#"
                                    class="icon-link gap-1 icon-link-hover stretched-link">
                                    Continue reading
                                    <svg class="bi" aria-hidden="true">
                                        <use xlink:href="#chevron-right"></use>
                                    </svg> </a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } %>
    </div>
    
<%- include("partials/footer.ejs") %>